<!-- Recipe results and calendar -->
<!-- Recipe results-->
<div class="row">
  <div class="col s6" id="recipes">
    <h6>Recipe Results</h6>
    <hr><br>
    <div class="card small">
      <div class="card-image">
        <img src="/images/placeholder.jpg">
        <span class="card-title"><strong>Recipe Name</strong</span> </div> <div class="card-content">
            <p>Short recipe description goes here</p>
      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>

  <!-- Calendar-->
  <div class="col s6" id="calendar">
    <h6>3 Day Calendar</h6>
    <hr><br>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Day 1</th>
          <th>Day 2</th>
          <th>Day 3</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th>Breakfast&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
        <tr>
          <th>Lunch&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
        <tr>
          <th>Dinner&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<!--row-->


