<!-- Recipe results and calendar -->
<!-- Recipe results-->
<div class="row">
  <div class="col s6" id="recipes">
    <h6>Suggested Recipes:</h6>
    <hr><br>
    <ul class="collection">
      <li class="collection-item avatar">
        <i class="material-icons circle">restaurant_menu</i> <!-- Change to recipe images later -->
        <span class="title">Recipe name</span>
        <p>Description<br>
          Link
        </p>
        <a href="#!" class="secondary-content"><i class="material-icons">favorite_border</i></a>
      </li>
      <li class="collection-item avatar">
        <i class="material-icons circle">restaurant_menu</i>
        <span class="title">Recipe name</span>
        <p>Description <br>
          Link
        </p>
        <a href="#!" class="secondary-content"><i class="material-icons">favorite_border</i></a>
      </li>
    </ul>
  </div>

  <!-- Calendar-->
  <div class="col s6" id="calendar">
    <h6>3 Day Calendar:</h6>
    <hr><br>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Day 1</th>
          <th>Day 2</th>
          <th>Day 3</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th>Breakfast&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
        <tr>
          <th>Lunch&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
        <tr>
          <th>Dinner&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
      </tbody>
    </table>
  </div>
</div><!--row-->


