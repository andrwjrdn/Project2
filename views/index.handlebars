<!-- Search bar -->
<form id="search">
  <div class="row">
    <div class="input-field inline col s12">
      <input type="text" id="ingredients" class="autocomplete">
      <label for="ingredients" id="text">Enter the ingredients in your fridge (separated by commas), and we'll provide you with tailored recipes!</label>
      <span class="helper-text" data-error="wrong" data-success="right">chicken, eggs, rice, etc.</span>
      <div class="container" id="buttons-view">
        <!-- Ingredient buttons go here -->
      </div>
      <button class="btn waves-effect cyan darken-2" id="search-button" type="submit" name="action" onclick="search()"><i class="material-icons">search</i>SEARCH</button>
    </div>
</form>

<!-- Recipe results and calendar -->
<!-- Recipe results-->
<div class="row">
  <div class="col s6 push-s1" id="recipes">
    <!-- Push moves column to the right -->
    <h6>Recipe Results</h6>
    <hr><br>
    <div class="card small">
      <div class="card-image">
        <img src="/images/placeholder.jpg">
        <span class="card-title"><strong>Recipe Name</strong></span> </div>
      <div class="card-content">
        <p class="description">Short recipe description goes here</p>
      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>

  <!-- Calendar-->
  <div class="col s6 push-s3" id="calendar">
    <!-- Push moves column to the right -->
    <h6>3 Day Calendar</h6>
    <hr><br>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Day 1</th>
          <th>Day 2</th>
          <th>Day 3</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th>Breakfast&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
        <tr>
          <th>Lunch&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
        <tr>
          <th>Dinner&nbsp;</th>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
          <td>Recipe goes here</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<!--row-->



<!-- Javascript links -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/ingredients.js"></script>




