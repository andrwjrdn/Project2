<!-- Search bar -->
<form id="search">
  <div class="row">
    <div class="input-field inline col s12">
      <input type="text" id="ingredients" class="autocomplete">
      <label for="ingredients" id="text">To get started, just add the ingredients in your fridge, and we'll provide
        you with tailored recipes!</label>
      <span class="helper-text" data-error="wrong" data-success="right">chicken, eggs, rice, etc.</span>
      <div class="container" id="buttons-view">
        <!-- Ingredient buttons go here -->
      </div>
      <button class="btn waves-effect cyan darken-2" id="search-button" type="submit" name="action"
        onclick="search()"><i class="material-icons">search</i>SEARCH</button>
    </div>
  </div>
</form>

